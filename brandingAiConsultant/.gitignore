# acrescenta (ou garante) regras de ignore
cat >> .gitignore <<'EOF'
# ==== Env files (não versionar) ====
.env
.env.*
!*.env.example

server/.env
server/.env.*
!server/.env.example

web/.env
web/.env.*
web/.env.local
web/.env.development.local
web/.env.production.local
!web/.env.example

# Node / Next
web/node_modules/
web/.next/
web/out/

# Python
server/.venv/
server/__pycache__/
**/*.pyc

# Logs / SO / Editor
*.log
.DS_Store
EOF

# teste de ignore
git check-ignore -v server/.env || echo "Regra aplicada; se 'git status' não mostrar server/.env, está ok."
